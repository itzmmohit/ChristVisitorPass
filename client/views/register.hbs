  <div class="container mt-4">
    <div class="card">
      <div class="card-header">
        Register Form
      </div>
      <div class="card-body"> 
        {{!-- change to admin/given_value --}}
        {{!-- When submitting the form, send the values to auth/register by POST method--}}
        {{!-- When submitting form, name attribute is the important identifier --}}
        <form action="/auth/register" method="POST"> 
          <div class="form-group">
            <label for="name">Name</label>
            <input type="text" class="form-control" id="name" name="name" required>
          </div>

          <div class="form-group">
            <label for="email">Email Address</label>
            <input type="email" class="form-control" id="email" name="email" required>
          </div>

          <div class="form-group">
            <label for="password">Password</label>
            <input type="password" class="form-control" id="password" name="password" required>
          </div>

          <div class="form-group">
            <label for="passwordConfirm">Confirm Password</label>
            <input type="password" class="form-control" id="passwordConfirm" name="passwordConfirm" required>
          </div>
          
          <button type="submit" class="btn btn-primary">Register User</button>
        </form>
      </div>
    </div>

    {{!-- From controllers/auth.js (Validation) --}}
    {{#if message }} {{!-- if message has content, do this, else don't. --}}
      <h4 class="alert alert-danger mt-4">{{message}}</h4>
    {{/if}}
  </div>
