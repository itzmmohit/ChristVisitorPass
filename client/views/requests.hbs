<script>
function changeBack() {
  // Get the current URL
  var currentUrl = window.location.href;
  // Remove the query parameters by replacing them with an empty string
  var newUrl = currentUrl.replace(/\?.*$/, "");
  // Update the URL
  window.location.href = newUrl;
};
</script>
